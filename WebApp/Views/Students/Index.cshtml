@model IEnumerable<Common.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Students</h2>
<div>
    @{
        var grid = new WebGrid(Model, defaultSort: "Id");
    }

    @grid.GetHtml(
        columns: grid.Columns(
            grid.Column("Id", "Id"),
            grid.Column("FirstName", header: "First Name"),
            grid.Column("LastName", header: "Last Name"),
            grid.Column("FatherInitial", header: "Father's Initial"),
            grid.Column("PIN", header: "PIN"),
            grid.Column("City", header: "City"),
            grid.Column("Address", header: "Address"),
            grid.Column("Highschool", header: "High School"),
            grid.Column("Specialization", header: "Specialization"),
            grid.Column("AdmissionExamGrade", header: "Exam"),
            grid.Column("BaccalaureatAverageGrade", header: "Bacc Avg"),
            grid.Column("BaccalaureatMaximumGrade", header: "Bacc Max"),
            grid.Column("FinalGrade", header: "Final"),
            grid.Column("Status", header: "Status")
        )
    )
</div>
